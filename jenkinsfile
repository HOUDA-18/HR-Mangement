pipeline {
    agent any

    stages {
        stage('Build All Components') {
            parallel {
                // Backend Pipeline
                stage('Backend') {
                    stages {
                        stage('Backend: Install Dependencies') {
                            steps {
                                dir('Backend') {
                                    sh 'npm install'
                                }
                            }
                        }
                        stage('Backend: Unit Test') {
                            steps {
                                dir('Backend') {
                                    sh 'npm test'
                                }
                            }
                        }
                        stage('Backend: Build') {
                            steps {
                                dir('Backend') {
                                    sh 'npm run build-dev'
                                }
                            }
                        }
                    }
                }
}

             
