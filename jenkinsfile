pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                dir('Backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('Backend') {
                    sh 'npm test'
                }
            }
        }
        stage('Build application') {
            steps {
                dir('Backend') {
                    sh 'npm run build-dev'
                }
            }
        }
    }
}
