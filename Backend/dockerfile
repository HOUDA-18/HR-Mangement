# Use official Node.js 20 Alpine image
FROM node:20-alpine
# Dépendances pour compiler canvas
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    pixman-dev \
    cairo-dev \
    pango-dev \
    jpeg-dev \
    giflib-dev
# Set working directory (recommended to keep even if not strictly required)
WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies
# Installation des dépendances (assurez-vous que les dépendances natives soient compilées pour l'architecture cible)
RUN npm install --build-from-source

# Copy all application files
COPY . .

# Expose the port your app runs on
EXPOSE 8070

# Start the application
CMD ["node", "server.js"]
