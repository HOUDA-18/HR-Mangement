# Utiliser une image Node.js 20 basée sur Debian Slim
FROM node:20-slim

# Installer les dépendances système pour canvas
RUN apt-get update && \
    apt-get install -y \
    python3 \
    make \
    g++ \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./

# Installation des dépendances et recompilation
RUN npm install --build-from-source
RUN npm rebuild canvas --build-from-source

COPY . .

EXPOSE 8070

CMD ["node", "server.js"]
